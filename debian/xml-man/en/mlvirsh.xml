<refentry>

  <xi:include xmlns:xi="http://www.w3.org/2001/XInclude" href="refentryinfo.xml"/>

  <refmeta>
    <refentrytitle>MLVIRSH</refentrytitle>
    <manvolnum>1</manvolnum>
